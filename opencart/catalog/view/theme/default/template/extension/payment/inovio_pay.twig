<script src="catalog/view/javascript/inovio_custom.js" type="text/javascript"></script>
<div id="inovioErrormessage"></div>
<form id="payment" class="form-horizontal" autocomplete="off">
    <fieldset>
        <legend>{{ text_credit_card }}</legend>
        <div class="form-group required">
            <label class="col-sm-2 control-label" for="inovio_input-cc-number">{{ entry_cc_number }}</label>
            <div class="col-sm-10">
                <input type="text" autocomplete="off" minlength="12" maxlength="16" name="inovio_cc_number" 
                    placeholder="{{ entry_cc_number }}" id="inovio-nput-cc-number" class="form-control"
                />
            </div>
        </div>
        <div class="form-group required">
            <label class="col-sm-2 control-label" for="inovio-input-cc-expire-date">{{ entry_cc_expire_date }}</label>
            <div class="col-sm-3">
                <select name="inovio_cc_expire_date_month" id="inovio-input-cc-expire-date" class="form-control">
                    {% for month in months %}
                        <option value="{{ month.value }}">{{ month.text }}</option>
                    {% endfor %}

                </select>
            </div>
            <div class="col-sm-3">
                <select name="inovio_cc_expire_date_year" class="form-control">

                    {% for year in year_expire %}

                        <option value="{{ year.value }}">{{ year.text }}</option>

                    {% endfor %}

                </select>
            </div>
        </div>
        <div class="form-group required">
            <label class="col-sm-2 control-label" for="inovio-input-cc-cvv2">{{ entry_cc_cvv2 }}</label>
            <div class="col-sm-10">
                <input type="password" autocomplete="off" minlength="3" maxlength="4" name="inovio_input-cc-cvv2"
                    value="" placeholder="{{ entry_cc_cvv2 }}" id="inovio_input-cc-cvv2" class="form-control" 
                />
            </div>
        </div>
    </fieldset>
</form>
<div class="buttons">
    <div class="pull-right">
        <input type="button" value="{{ button_confirm }}" id="inovio-button-confirm" class="btn btn-primary" />
    </div>
</div>